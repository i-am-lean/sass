        </h1>
        <p class="product__description">
          {{descriptions}}
        </p>

        <div class="product__action">
          {{#with link}}
            {{#each text}}
              <a href="{{../link}}" class="product__link">{{this}}</a>
            {{/each}}
          {{/with}}
        </div>
      </div>
    </section>    
  {{/with}} 

